<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9B494"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Создание заявки покупка/ремонт"
        android:textSize="30sp"
        android:textColor="#393939"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextServiceType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:hint="Услуги"
        android:gravity="center"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>


    <EditText
        android:id="@+id/editTextName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:hint="ФИО"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@id/editTextServiceType"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/editTextServiceType"
        app:layout_constraintTop_toBottomOf="@id/editTextServiceType" />

    <EditText
        android:id="@+id/editTextPCModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:hint="Модель ПК"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@id/editTextServiceType"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/editTextServiceType"
        app:layout_constraintTop_toBottomOf="@id/editTextName" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:hint="Номер телефона"
        android:inputType="phone"
        android:maxLength="12"
        app:layout_constraintEnd_toEndOf="@id/editTextServiceType"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/editTextServiceType"
        app:layout_constraintTop_toBottomOf="@id/editTextPCModel" />


    <EditText
        android:id="@+id/editTextNote"
        android:layout_width="362dp"
        android:layout_height="27dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:hint="Примечание к заказу"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@id/editTextServiceType"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/editTextServiceType"
        app:layout_constraintTop_toBottomOf="@id/editTextPhone" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="365dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:hint="Выберите дату доставки"
        android:inputType="date"
        android:maxLength="10"
        app:layout_constraintEnd_toEndOf="@id/editTextServiceType"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/editTextServiceType"
        app:layout_constraintTop_toBottomOf="@id/editTextNote" />


    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="362dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:hint="Время доставки"
        android:inputType="time"
        android:maxLength="5"
        app:layout_constraintEnd_toEndOf="@id/editTextServiceType"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@id/editTextServiceType"
        app:layout_constraintTop_toBottomOf="@id/editTextDate" />


    <Button
        android:id="@+id/buttonOpenStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#D0BB00"
        android:text="Отправить заявку"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextTime" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="164dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#D0BB00"
        android:text="Назад"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonOpenStats" />

</androidx.constraintlayout.widget.ConstraintLayout>