<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/editOwnerName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="ФИО"
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/editPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Телефон"
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/editPcModel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="ПК"
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/editServiceType"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Услуга"
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/editNote"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Примечание"
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/textDateTimeStatus"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Дата | Время | Статус"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonMarkDone"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="✓"
            android:backgroundTint="#7cb518"
            android:textColor="#fff"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="✕"
            android:backgroundTint="#c41c3b"
            android:textColor="#fff"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
